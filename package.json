{
  "name": "editor",
  "version": "0.0.701",
  "main": "./src/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/IntechStudioDev/grid-editor.git"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "chokidar": "^3.4.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.8.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.21",
    "postcss-load-config": "^2.1.0",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "svelte-grid": "^1.10.8",
    "svelte-preprocess": "^3.2.0-alpha.2",
    "tailwindcss": "^1.1.3"
  },
  "dependencies": {
    "@sveltejs/pancake": "0.0.16",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "email-templates": "^7.1.0",
    "panzoom": "^9.2.4",
    "polka": "^0.5.2",
    "pug": "^3.0.0",
    "serialport": "^9.0.0",
    "sirv-cli": "^0.4.4",
    "svelte-color-picker": "^1.0.7"
  },
  "build": {
    "appId": "com.editor.app",
    "directories": {
      "output": "dist/"
    },
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "IntechStudioDev",
          "repo": "grid-editor"
        }
      ],
      "artifactName": "${name}-Setup-${version}.${ext}",
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "scripts": {
    "e:builder": "electron-builder --publish onTagOrDraft",
    "e:builder:local": "electron-builder --publish never",
    "export": "run-s s:build e:builder",
    "export:local": "run-s s:build e:builder:local",
    "s:build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev --host 0.0.0.0",
    "electron": "run-s build pure-electron",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "cross-env DEBUG=email-templates NODE_ENV=development electron ."
  }
}
