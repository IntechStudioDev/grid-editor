{
  "name": "grid_editor",
  "version": "0.1.1",
  "main": "./src/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/IntechStudioDev/grid-editor.git"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "chokidar": "^3.4.3",
    "cross-env": "^7.0.2",
    "electron": "^9.3.2",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-rebuild": "^2.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "postcss-load-config": "^2.1.2",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^5.3.1",
    "svelte": "^3.29.4",
    "svelte-grid": "^1.11.2",
    "svelte-preprocess": "^3.9.12",
    "tailwindcss": "^1.9.6"
  },
  "dependencies": {
    "@sveltejs/pancake": "0.0.16",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "email-templates": "^7.1.2",
    "iconv-lite": "^0.6.2",
    "panzoom": "^9.3.0",
    "polka": "^0.5.2",
    "pug": "^3.0.1",
    "serialport": "^9.0.2",
    "sirv-cli": "^0.4.6",
    "svelte-color-picker": "^1.0.7",
    "universal-analytics": "^0.4.23",
    "uuid": "^8.3.1"
  },
  "build": {
    "asar": true,
    "appId": "com.Grid-Editor.app",
    "productName": "Grid Editor",
    "copyright": "Copyright Â© 2020 Intech Studio Ltd.",
    "directories": {
      "output": "dist/"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "build/notarize.js",
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "IntechStudioDev",
          "repo": "grid-editor"
        }
      ],
      "artifactName": "${name}-Setup-${version}.${ext}",
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "artifactName": "${name}-Setup-${version}.${ext}",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  },
  "scripts": {
    "e:builder": "cross-env NODE_ENV=production NOTARIZE=true electron-builder --publish onTagOrDraft",
    "e:builder:local": "electron-builder --publish never",
    "export": "run-s s:build e:builder",
    "rebuild": "./node_modules/.bin/electron-rebuild.cmd",
    "export:local": "run-s s:build e:builder:local",
    "s:build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev --host 0.0.0.0",
    "electron": "run-s build pure-electron",
    "pure-electron": "electron .",
    "electron-dev": "run-p dev pure-electron-dev",
    "pure-electron-dev": "cross-env DEBUG=email-templates DEBUG=universal-analytics NODE_ENV=development electron ."
  }
}
